---
import { getCollection, render } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";

export async function getStaticPaths() {
  const posts = (await getCollection("posts")).filter((post) => !post.data.draft);
  return posts
    .map((post) => {
      const [type, slug] = post.slug.split("/");
      if (!type || !slug) return null;
      return { params: { type, slug }, props: { post } };
    })
    .filter((v): v is { params: { type: string; slug: string }; props: { post: (typeof posts)[number] } } => v !== null);
}

const { post } = Astro.props;
const { Content } = await render(post);
const [type, slug] = post.slug.split("/");
const ogImage = type && slug ? `/og/${type}/${slug}.png` : (slug ? `/posts/${slug}/${post.data.ogp}` : undefined);
---

<BaseLayout title={post.data.title} description={post.data.description} ogImage={ogImage} ogType="article">
  <article aria-labelledby="post-title">
    <header>
      <h1 id="post-title">{post.data.title}</h1>
      <p class="meta">{post.data.description}</p>
    </header>

    <div class="content" aria-label="Article body">
      <Content />
    </div>

    <details class="meta-box">
      <summary>Editing history</summary>
      <h2 class="visually-hidden">Changelog</h2>
      <ul aria-label="Changelog entries">
        {post.data.changelog.map((item) => (
          <li>
            <strong>{item.summary}</strong>
            <time class="meta" datetime={item.date}>{item.date}</time>
          </li>
        ))}
      </ul>
      <p>
        Contact: <a href="https://uta8a.net/contact" aria-label="Contact page on uta8a.net">uta8a.net/contact</a>
      </p>
    </details>
  </article>
</BaseLayout>

<style>
  article {
    max-width: 780px;
    margin-inline: auto;
    padding: 2.4rem 0 3.2rem;
    padding-inline: clamp(0.25rem, 2.5vw, 1.2rem);
  }

  h1 {
    font-size: clamp(2.2rem, 5.2vw, 3.7rem);
    line-height: 1.1;
    margin: 0 0 0.8rem;
    letter-spacing: -0.025em;
    font-weight: 700;
  }

  .content :global(h1) {
    font-size: clamp(1.45rem, 3.3vw, 1.75rem);
    line-height: 1.3;
    margin: 1.4em 0 0.52em;
    letter-spacing: -0.01em;
    font-weight: 680;
  }

  .meta {
    font-size: 0.92rem;
  }

  .content {
    margin-top: 1.9rem;
    background: #fbfbf9;
    border: 1px solid #e5e5df;
    border-radius: 12px;
    padding: 1.25rem 1.25rem 1.35rem;
  }

  .content :global(p) {
    margin: 0 0 1.1rem;
  }

  .content :global(p:last-child) {
    margin-bottom: 0;
  }

  .content :global(h2) {
    font-size: clamp(1.2rem, 2.8vw, 1.4rem);
    line-height: 1.35;
    margin: 1.35em 0 0.48em;
  }

  .content :global(h3) {
    font-size: clamp(1.08rem, 2.3vw, 1.22rem);
    line-height: 1.38;
    margin: 1.2em 0 0.44em;
  }

  .content :global(h4) {
    font-size: clamp(0.98rem, 2vw, 1.08rem);
    line-height: 1.45;
    margin: 1.05em 0 0.4em;
  }

  .content :global(pre) {
    margin: 1.15rem 0 1.25rem;
    padding: 1.05rem 1.2rem;
    border: 1px solid #2f3945;
    border-radius: 12px;
    background: linear-gradient(180deg, #202833 0%, #171c24 100%);
    box-shadow: inset 0 1px 0 #ffffff22;
    color: #e8eef5;
    overflow-x: auto;
  }

  .content :global(pre code) {
    padding: 0;
    border: 0;
    background: transparent;
    font-size: 0.92rem;
    line-height: 1.6;
    color: inherit;
    font-weight: 500;
  }

  .content :global(pre.astro-code span) {
    color: var(--shiki-dark, var(--shiki-light, #e8eef5)) !important;
    background-color: transparent !important;
  }

  .content :global(code) {
    padding: 0.16em 0.42em;
    border-radius: 6px;
    border: 1px solid #d8dcd4;
    background: #f0f2ec;
    font-size: 0.9em;
  }

  .meta-box {
    margin-top: 1.4rem;
    padding: 0.8rem 1rem;
    background: #f2f2ee;
    border: 1px solid #dbdbd6;
    border-radius: 10px;
  }

  .meta-box summary {
    cursor: pointer;
    font-weight: 600;
  }

  .meta-box ul {
    margin: 0.8rem 0 0;
    padding-left: 1.1rem;
  }

  @media (max-width: 640px) {
    article {
      padding-top: 1.4rem;
      padding-inline: 0;
    }

    .content {
      padding: 0.9rem 0.85rem 1rem;
    }

    .content :global(pre) {
      padding: 0.9rem 0.95rem;
      border-radius: 10px;
    }
  }
</style>
